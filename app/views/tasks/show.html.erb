<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<input type="checkbox" name="completed" id="completed" <%= "checked" if @task.completed %> >

<% if @task.completed %>
  <label for="completed">This task is completed</label>
<% else %>
  <label for="completed">This task is not completed yet</label>
<% end %>

<br><br>
<%= render "link_to_index" %>

<%= link_to "Edit task", edit_task_path %>

<%= link_to "Delete task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" }
%>
